<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.exercise1.HelloController" hgap="10" vgap="10"
          alignment="CENTER" style="-fx-padding: 20;">

    <!-- Set Column Constraints -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Province:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="provinceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="cityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Postal Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="postalCodeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Phone Number:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneNumberField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <CheckBox fx:id="studentCouncilCheckbox" text="Student Council" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <CheckBox fx:id="volunteerWorkCheckbox" text="Volunteer Work" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Program:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <RadioButton fx:id="csRadioButton" text="Computer Science" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <RadioButton fx:id="businessRadioButton" text="Business" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Courses:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <!-- ComboBox for course selection -->
    <ComboBox fx:id="coursesComboBox" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <!-- TextField for selected courses -->
    <TextField fx:id="coursesTextField" GridPane.rowIndex="11" GridPane.columnIndex="1" editable="false"/>

    <Button text="Display" onAction="#onDisplayButtonClick" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <TextArea fx:id="displayArea" GridPane.rowIndex="13" GridPane.columnIndex="0" GridPane.columnSpan="2"
              prefHeight="100" wrapText="true"/>
</GridPane>
